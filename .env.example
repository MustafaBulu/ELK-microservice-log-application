# Copy this file to `.env` and set secure values before running docker compose.

# PostgreSQL
POSTGRES_DB=etradeplatform
POSTGRES_USER=etradeplatform
POSTGRES_PASSWORD=replace_with_strong_password

# Auth service datasource (compose-side vars to avoid host env collisions)
AUTH_DB_URL=jdbc:postgresql://postgres:5432/etradeplatform
AUTH_DB_USERNAME=etradeplatform
AUTH_DB_PASSWORD=replace_with_strong_password

# JWT secret for auth-service (BASE64-encoded, strong random key)
AUTH_JWT_SECRET_B64=replace_with_base64_secret

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=replace_with_strong_password
